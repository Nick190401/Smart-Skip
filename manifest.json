{
  "manifest_version": 3,
  "name": "Smart Skip",
  "version": "1.1.3",
  "description": "Automatically clicks Skip Intro, Skip Recap, Skip Credits, Skip Ads, and Next Episode buttons on streaming platforms",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "smart-skip@extension.local"
    }
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.disneyplus.com/*",
    "*://*.amazon.com/*",
    "*://*.amazon.de/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.in/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.se/*",
    "*://*.amazon.pl/*",
    "*://*.amazon.com.tr/*",
    "*://*.amazon.sg/*",
    "*://*.amazon.ae/*",
    "*://*.amazon.sa/*",
    "*://*.amazon.eg/*",
    "*://*.primevideo.com/*",
    "*://*.youtube.com/*",
    "*://*.crunchyroll.com/*",
    "*://*.hulu.com/*",
    "*://*.apple.com/*",
    "*://*.tv.apple.com/*",
    "*://*.hbomax.com/*",
    "*://*.max.com/*",
    "*://*.paramountplus.com/*",
    "*://*.peacocktv.com/*",
    "*://*.funimation.com/*",
    "*://*.wakanim.tv/*",
    "*://*.sky.de/*",
    "*://*.joyn.de/*",
    "*://*.rtl.de/*",
    "*://*.prosieben.de/*",
    "*://*.zdf.de/*",
    "*://*.ard.de/*",
    "*://*.mediathek.de/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.amazon.com/*",
        "*://*.amazon.de/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.se/*",
        "*://*.amazon.pl/*",
        "*://*.amazon.com.tr/*",
        "*://*.amazon.sg/*",
        "*://*.amazon.ae/*",
        "*://*.amazon.sa/*",
        "*://*.amazon.eg/*",
        "*://*.primevideo.com/*",
        "*://*.youtube.com/*",
        "*://*.crunchyroll.com/*",
        "*://*.hulu.com/*",
        "*://*.apple.com/*",
        "*://*.tv.apple.com/*",
        "*://*.hbomax.com/*",
        "*://*.max.com/*",
        "*://*.paramountplus.com/*",
        "*://*.peacocktv.com/*",
        "*://*.funimation.com/*",
        "*://*.wakanim.tv/*",
        "*://*.sky.de/*",
        "*://*.joyn.de/*",
        "*://*.rtl.de/*",
        "*://*.prosieben.de/*",
        "*://*.zdf.de/*",
        "*://*.ard.de/*",
        "*://*.mediathek.de/*"
      ],
      "js": [
        "src/shared/language.js",
        "src/content/skipper.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Smart Skip"
  },
  
  "icons": {
    "48": "assets/icons/icon.svg",
    "96": "assets/icons/icon.svg"
  },
  
  "background": {
    "scripts": ["src/background/background.js"]
  }
}
